# Dockerfile pour l'interface Streamlit
FROM python:3.11-slim

WORKDIR /app

# Installer les dependances systeme
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Installer Poetry
RUN pip install --no-cache-dir poetry==1.7.1

# Copier les fichiers de configuration
COPY pyproject.toml poetry.lock* ./

# Installer les dependances (sans dev)
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi --only main --no-root

# Copier le code source
COPY src/ ./src/

# Variables d'environnement
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
# API_URL definie via variable d'environnement

# Port expose
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Demarrer Streamlit
CMD streamlit run src/ui/app.py --server.port=${PORT:-8501} --server.address=0.0.0.0
